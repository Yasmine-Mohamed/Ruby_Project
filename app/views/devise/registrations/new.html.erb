<% header "Welcome To CouRseRa" %>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

  <div class="container">
    <div class="row">
      <div class="col-lg-offset-3 col-lg-6">
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-offset-3 col-lg-6">
          <div class="form-group">
            <%= f.label :email %>
            <%= f.email_field :email, class: 'form-control' %>
          </div>
        </div>
      </div>

    <div class="row">
      <div class="col-lg-offset-3 col-lg-6">
          <div class="form-group">
            <%= f.label :password %>
            <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
            <% if @validatable %>
                <span class="help-block"><%= @minimum_password_length %> characters minimum</span>
            <% end %>
          </div>
        </div>
      </div>

    <div class="row">
      <div class="col-lg-offset-3 col-lg-6">
          <div class="form-group">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
          </div>
        </div>
      </div>

    <div class="row">
      <div class="col-lg-offset-3 col-lg-6">
          <div class="form-group">
            <%= f.label :date_of_birth%>
            <%= f.text_field :dob, class: 'form-control'%>
          </div>
        </div>
      </div>

    <div class="row">
      <div class="col-lg-offset-3 col-lg-6">
          <div class="form-group">
            <%= f.label :gender%>
            <br>
            <%= f.label :gender, 'Male'%>
            <%= f.radio_button :gender,'Male'%>
            <%= f.label :gender, 'Female'%>
            <%= f.radio_button :gender,'Female'%>
          </div>
        </div>
      </div>

    <div class="row">
      <div class="col-lg-offset-3 col-lg-6">
        <div class="form-group">
          <%= f.label :profile_picture %>
          <%= f.file_field :profile_picture, class: 'form-control' %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-offset-3 col-lg-6">
          <div class="actions">
            <%= f.submit "Sign up", class: 'btn btn-primary btn-block' %>
          </div>
      </div>
    </div>
<% end %>
</div>


