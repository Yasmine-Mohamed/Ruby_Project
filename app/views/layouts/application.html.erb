<!DOCTYPE html>
<html>
<head>
  <title>CouRseRa</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<header>
  <nav class="navbar navbar-inverse navbar-fixed-top" role="banner">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <br>
        <%= link_to ' CouRseRa', root_path, class: 'navbar-brand', class: 'glyphicon glyphicon-education' %>
      </div>
      <div class="collapse navbar-collapse navbar-right">
        <ul class="nav navbar-nav">
          <% if user_signed_in? %>
              <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                  <%= current_user.name %>
                  <span class="caret"></span>
               <%= image_tag current_user.profile_picture.thumb.url %>
                </a>
                <ul class="dropdown-menu" role="menu">
                  <li><%= link_to ' Profile', edit_user_registration_path , class: 'glyphicon glyphicon-user'%></li>
                  <% if current_user.instractor? %>
                      <li><%= link_to ' Courses', courses_path, class: 'glyphicon glyphicon-folder-open' %></li>
                      <li><%= link_to ' Lectures', lectures_path, class: 'glyphicon glyphicon-duplicate' %></li>
                  <% end %>
                  <li><%= link_to ' Log out', destroy_user_session_path, method: :delete , class: 'glyphicon glyphicon-log-out'%></li>
                </ul>
              </li>
              <% else %>
              <li><%= link_to ' LogIn', new_user_session_path ,class: 'glyphicon glyphicon-log-in'%></li>
              <li><%= link_to ' SignUp', new_user_registration_path ,class: 'glyphicon glyphicon-log-out'%></li>
              </ul>
          <% end %>
              </div>
          </div>
  </nav>
</header>
<body style="background-color: lightskyblue">
<br><br><br><br>
<%= yield :top_content %>

<div class="container">
  <h1><%= yield :header %></h1>
  <%= yield %>
</div>
</body>
</html>