<h1>Editing Lecture</h1>
<%= form_for(@lecture) do |f| %>
    <% if @lecture.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@lecture.errors.count, "error") %> prohibited this lecture from being saved:</h2>

          <ul>
            <% @lecture.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
        <% end %>
    <br><br>
    <div class="container">
      <div class="row">
        <div class="col-lg-10">
          <div class="form-group">
            <%= f.label :content %><br>
            <%= f.cktext_area :content %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-4">
          <div class="form-group">
            <%= f.label :attachment %><br>
            <%= f.file_field :attachment %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-4">
          <div class="actions">
            <%= f.submit "Add" , class: 'btn btn-primary btn-block' %>
          </div>
        </div>
      </div>
</div>
<br><br>
<%= link_to ' Back', lecture_path ,  class: 'glyphicon glyphicon-backward' %>
<%end %>