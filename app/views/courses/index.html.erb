<p id="notice"><%= notice %></p>

<br><br>
<div class="panel panel-default">
  <div class="panel-heading">Courses</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th></th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% current_user.courses.each do |course| %>
      <tr>
        <td><%= course.title %></td>
        <td><%= link_to 'Show', course , class: 'btn btn-info'%></td>
        <td><%= link_to 'Edit', edit_course_path(course) , class: 'btn btn-warning' %></td>
        <td><%= link_to 'Delete', course, method: :delete, data: { confirm: 'Are you want to delete this course ?' } , class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to ' Add New Course', new_course_path , class: 'glyphicon glyphicon-folder-open'%>
