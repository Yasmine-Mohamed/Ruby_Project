<%content_for :top_content do %>
    <br><br>
    <div class="container">
      <%if !(user_signed_in?) %>
      <div class="row">
        <div class="col-lg-12">
          <article class="jumbotron col-lg-12">
            <div class="container">
              <h1>Welcome To CouRseRa</h1>
              <p>Register to get started.</p>
              <p>
                <%= link_to 'Register', new_user_registration_path, class: 'btn btn-primary btn-lg' %>
              </p>
            </div>
          </article>
    <% end %>
          <% @courses.each do |course| %>
          <div class="col-sm-6 col-md-4">
            <div class="thumbnail thumb-box">
              <h2 style="text-align: center;"><%= course.title %></h2>
              <%= image_tag("course_design.jpg", size: "250x300")%>
              <div class="caption" style="text-align: center;">
                <%= button_to 'View More' , course , method: :get , class: 'btn  btn-info' %>
              </div>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
<% end %>
